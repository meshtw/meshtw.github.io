---
import Layout from '@layouts/General.astro';

import '@styles/hackmd-alert-alt.css';

const { frontmatter } = Astro.props;
---

<Layout frontmatter={frontmatter}>
  <main id='main-content' class='w-full bg-gray-400/80 dark:bg-gray-800'>
    <article
      class='mx-auto max-w-5xl space-y-12 bg-gray-200 px-6 py-24 text-gray-900 lg:px-12 dark:bg-gray-700/90 dark:text-gray-200'
    >
      <div class='mx-auto w-full max-w-5xl space-y-4'>
        <div class='mx-auto text-gray-800 dark:text-gray-300'>
          <slot />
        </div>
      </div>
    </article>
  </main>
</Layout>
