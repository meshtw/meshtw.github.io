---
import { notFoundDirectory } from '@src/directory.config';

const notFoundSection = {
  title: '404 Not Found',
  description: '這個頁面可能已經被移動或刪除了。',
  content: '連找不到的頁面都能被你找到了！意不意外？開不開心？',
  button: [
    {
      text: '上一頁',
      href: 'javascript:history.back()',
      icon: '←',
    },
    {
      text: '回到主頁',
      href: '/',
    },
  ],
  image: {
    src: 'https://images.unsplash.com/photo-1601573691675-513055e4bb43?q=80&h=640&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA',
    alt: 'courtesy of Zane Lindsay on Unsplash',
  },
};
---

<section class='bg-gray-200 dark:bg-gray-800'>
  <div
    class='mx-auto min-h-screen max-w-xl px-12 py-12 lg:flex lg:max-w-screen-xl lg:items-center lg:justify-center lg:gap-8 lg:px-8'
  >
    <div class='w-full lg:w-1/2'>
      <p class='text-malachite-900 dark:text-malachite text-lg font-medium'>
        {notFoundSection.title}
      </p>
      <h1
        class='mt-3 text-2xl font-semibold text-gray-900 md:text-3xl dark:text-white'
      >
        {notFoundSection.description}
      </h1>
      <p class='text-md mt-4 text-gray-600 dark:text-gray-400'>
        {notFoundSection.content}
      </p>

      <div class='mt-6 flex items-center gap-x-4'>
        {
          notFoundSection.button.map((btn) => (
            <a
              href={btn.href}
              class={`flex w-1/2 items-center justify-center gap-x-2 rounded border bg-white px-6 py-2 text-sm text-gray-700 transition-colors duration-200 md:w-auto ${
                btn.icon
                  ? 'hover:bg-gray-50 dark:border-gray-600 dark:bg-gray-800 dark:text-gray-200 dark:hover:bg-gray-800'
                  : ''
              }`}
            >
              {btn.icon && <span>{btn.icon}</span>}
              <span>{btn.text}</span>
            </a>
          ))
        }
      </div>

      <div class='mt-10 space-y-6'>
        {
          notFoundDirectory.map((item) => (
            <div>
              <a
                href={item.href}
                class='text-malachite-900 dark:text-malachite inline-flex items-center gap-x-2 text-sm hover:underline'
              >
                <span>{item.title}</span>
                <span aria-hidden='true'>→</span>
              </a>
              <p class='mt-2 text-sm text-gray-600 dark:text-gray-400'>
                {item.description}
              </p>
            </div>
          ))
        }
      </div>
    </div>

    <div class='max-lg:hidden lg:relative lg:mt-0 lg:w-1/3'>
      <img
        class='h-80 w-full rounded-lg object-cover md:h-96 lg:h-[36rem]'
        src={notFoundSection.image.src}
        alt={notFoundSection.image.alt}
        loading='lazy'
      />
    </div>
  </div>
</section>
